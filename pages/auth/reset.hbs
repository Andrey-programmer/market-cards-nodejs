<div class="row">
    <div class="col s8 offset-s2" style="margin-top: 2rem;">
        <h2>Забыли пароль?</h2>
        <form action="/auth/reset" method="POST" class="col s6">
            {{#if error}}
            <p class="alert">{{error}}</p>
            {{/if}}
            <div class="input-field">
                <input placeholder="Email" id="email" name="email" type="email" class="validate" required>
                <label for="email">Email</label>
                <span class="helper-text" data-error="Введите email"></span>
            </div>
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button class="btn btn-primary" type="submit">Сбросить</button>
        </form>
    </div>
</div>