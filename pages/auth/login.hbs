<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Войти</a></li>
        <li class="tab col s6"><a href="#register">Зарегистрироваться</a></li>
      </ul>
    </div>
    <div id="login" class="col s8 offset-s2" style="margin-top: 2rem;">
      <h2>Войти в магазин</h2>
      <form action="/auth/login" method="POST" class="col s6">
        <div class="input-field">
            <input placeholder="Email" id="email" name="email" type="email" class="validate" required>
            <label for="email">Email</label>
            <span class="helper-text" data-error="Введите email"></span>
        </div>
        <div class="input-field">
          <input placeholder="Пароль" id="password" name="password" type="password" class="validate" required>
          <label for="password">Пароль</label>
          <span class="helper-text" data-error="Введите пароль"></span>
        </div>
        <button class="btn btn-primary" type="submit">Войти</button>
      </form>
    </div>
    <div id="register" class="col s8 offset-s2">
      <h2>Создать аккаунт</h2>
      <form action="/auth/register" method="POST" class="col s6">
        <div class="input-field">
            <input placeholder="Email" id="кemail" name="email" type="email" class="validate" required>
            <label for="email">Email</label>
            <span class="helper-text" data-error="Введите email"></span>
        </div>
        <div class="input-field">
          <input placeholder="Имя" id="name" name="name" type="text" class="validate" required>
          <label for="name">Имя</label>
          <span class="helper-text" data-error="Введите имя"></span>
        </div>
        <div class="input-field">
            <input placeholder="Пароль" id="rpassword" name="password" type="password" class="validate" required>
            <label for="rpassword">Пароль</label>
            <span class="helper-text" data-error="Введите пароль"></span>
        </div>
        <div class="input-field">
            <input placeholder="Пароль" id="confirm" name="confirm" type="password" class="validate" required>
            <label for="confirm">Повторите пароль</label>
            <span class="helper-text" data-error="Введите пароль"></span>
        </div>
        <button class="btn btn-primary" type="submit">Зарегистрироваться</button>
      </form>
    </div>
  </div>
</div>